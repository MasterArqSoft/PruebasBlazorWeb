<EditForm Model="@PersonaInfo">
    <div class="form-group">
        <label for="exampleInputIdentificacion">Número de identificación</label>
        <input type="number" class="form-control" id="exampleInputIdentificacion"
               aria-describedby="identificacionHelp" placeholder="Número de identificación"
               @bind-value="@PersonaInfo.NumeroIdentificacion"
               @bind-value:event="oninput">
        <small id="emailHelp" class="form-text text-muted">
            Current value: @PersonaInfo.NumeroIdentificacion
        </small>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Nombres</label>
        <input type="text" class="form-control" id="exampleInputNombre"
               aria-describedby="nombreHelp" placeholder="Nombres"
               @bind-value="@PersonaInfo.Nombres"
               @bind-value:event="oninput">
        <small id="nombresHelp" class="form-text text-muted">
            Current value: @PersonaInfo.Nombres
        </small>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Apellidos</label>
        <input type="email" class="form-control" id="exampleInputApellidos"
               aria-describedby="apellidosHelp" placeholder="Apellidos"
               @bind-value="@PersonaInfo.Apellidos"
               @bind-value:event="oninput">
        <small id="apellidosHelp" class="form-text text-muted">
            Current value: @PersonaInfo.Apellidos
        </small>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="datosAdicionalesCheck1"
               @bind="@IncluirDatosAdicionales">

        <label class="form-check-label" for="datosAdicionalesCheck1">Incluir datos Adicionales?</label>
    </div>
    <br />
    @if (IncluirDatosAdicionales)
    {

        <div class="form-group">
            <label for="exampleInputPhono">Número de celular</label>
            <input type="tel" class="form-control" id="exampleInputphono"
                   aria-describedby="phonoHelp" placeholder="Número de celular"
                   @bind-value="@PersonaInfo.NumeroCelular"
                   @bind-value:event="oninput">
            <small id="emailHelp" class="form-text text-muted">
                Current value: @PersonaInfo.NumeroCelular
            </small>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Correo</label>
            <input type="email" class="form-control" id="exampleInputEmail1"
                   aria-describedby="emailHelp" placeholder="Enter email"
                   @bind-value="@PersonaInfo.Email"
                   @bind-value:event="oninput">
            <small id="emailHelp" class="form-text text-muted">
                Current value: @PersonaInfo.Email
            </small>
        </div>
    }


</EditForm>
